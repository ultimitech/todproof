<%#= render 'shared/errors', obj: @assignment %>

<div class='row'>
  <div class='col-xs-12'>
	  <%= form_tag({controller: "assignments", action: "validate_content"}, multipart: true, :html => {class: 'form-horizontal', role: 'form'}) do %>

      <div class='form-group'>
        <div class='control-label col-sm-2'>
          <%= label_tag(:q, 'File Name') %>
        </div>
        <div class='col-sm-8'>
          <%= file_field_tag "assignment[file_name]", class: 'btn btn-primary' %>
          <!--<input type="file" id="myFile">-->
          <!-- to style: google search -- file input rails  -->
          <!--http://stackoverflow.com/questions/33028255/rails-4-how-to-apply-custom-css-to-rails-form-file-field
          http://stackoverflow.com/questions/14509449/styling-file-upload-button-for-simple-form-for-with-bootstrap-in-rails-3 -->
        </div>
      </div>

      <div class="form-group">
        <div class='col-sm-offset-2 col-xs-10'>
		<%= submit_tag('Validate Content', class: 'btn btn-primary btn-lg') %>
		<%#= submit_tag('Validate Content', id: "#{@assignment.id}", class: 'btn btn-primary btn-lg') %>
        </div>
      </div>      
    <% end %>

    <div class='col-xs-4 col-xs-offset-4'>
      [ <%= link_to "Cancel request and return to assignment", assignment_path %> ]
    </div>    

  </div>
</div>
