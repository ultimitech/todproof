<%#= render 'shared/errors', obj: @contribution %>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@contribution, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
            <%= f.label :kind %>
        </div>
        <div class='col-sm-8'>
            <%= f.select :kind, [['Translate', 'T'], ['Create', 'C'], ['Vote', 'V']], class: 'form-control', placeholder: 'Kind' %> 
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
            <%= f.label :effort_in_seconds %>
        </div>
        <div class='col-sm-8'>
            <%= f.number_field :effort_in_seconds, class: 'form-control', placeholder: 'Effort in seconds' %> 
        </div>
      </div>
      <!-- should not load ALL edits - system runs out of memory!!!; hardly a need to point a contribution to another edit
      <div class='form-group'>
        <div class='control-label col-sm-2'>
            <%#= f.label :edit %>
        </div>
        <div class='col-sm-8'>
            <%#= f.collection_select :edit_id, Edit.all, :id, :content, class: 'form-control', placeholder: 'Edit' %> 
        </div>
      </div>
      -->
      <!-- no need to point a contribution to another assignment 
      <div class='form-group'>
        <div class='control-label col-sm-2'>
            <%#= f.label :assignment %>
        </div>
        <div class='col-sm-8'>
            <%#= f.collection_select :assignment_id, Assignment.all, :id, :assignment_text, class: 'form-control', placeholder: 'Assignment' %> 
        </div>
      </div>
      -->

      <div class="form-group">
        <div class='col-sm-offset-2 col-xs-10'>
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>      
    <% end %>

    <div class='col-xs-4 col-xs-offset-4'>
      [ <%= link_to "Cancel request and return to contributions listing", contributions_path %> ]
    </div>    

  </div>
</div>
