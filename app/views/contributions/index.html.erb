<h1 align='center'>Assignments</h1>

<div class='container'>
  <table class='table table-condensed table-bordered table-hover'>
    <thead>
      <tr>
        <th>Role</th>
        <th>Active</th>
        <th>CI</th>
        <th>Place</th>
        <th>Translation</th>
        <th>User</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @assignments.each do |assignment| %>
        <tr>
          <td><%= assignment.role %></td>
          <td><%= assignment.active %></td>
          <td><%= assignment.ci %></td>
          <td><%= assignment.place %></td>
          <td><%= assignment.translation %></td>
          <td><%= assignment.user %></td>
          <td><%= link_to 'Show', assignment %></td>
          <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
          <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
