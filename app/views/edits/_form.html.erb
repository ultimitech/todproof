<%= render 'shared/errors', obj: [@sentence, @edit] %>
<div class='row'>
  <div class='col-xs-12'>
    <%= form_for([@sentence, @edit], :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
            <%= f.label :content %>
        </div>
        <div class='col-sm-8'>
            <%= f.text_field :content, class: 'form-control', placeholder: 'Content', autofocus: true %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
            <%= f.label :hid %>
        </div>
        <div class='col-sm-8'>
            <%= f.check_box :hid, class: 'form-control', placeholder: 'Edit is hidden', autofocus: true %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
            <%= f.label :top %>
        </div>
        <div class='col-sm-8'>
            <%= f.text_field :top, class: 'form-control', placeholder: 'Top', autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class='col-sm-offset-2 col-xs-10'>
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class='col-xs-4 col-xs-offset-4'>
      [ <%= link_to "Cancel request and return to edits listing", sentence_edits_path %> ]
    </div>
  </div>
</div>
