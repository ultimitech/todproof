<h2 align='center'>Message</h2>

<div class='col-xs-8 col-xs-offset-2'>

  <table class='table table-striped'>
    <tbody>
      <tr>
        <td><strong>Id</strong></td>
        <td><%= @message.id %></td>
      </tr>
      <tr>
        <td><strong>Date Of Delivery</strong></td>
        <td><%= @message.dod %></td>
      </tr>
      <tr>
        <td><strong>Time Of Day</strong></td>
        <td><%= @message.tod %></td>        
      </tr>
      <tr>
        <td><strong>Day Of Week</strong></td>
        <td><%= @message.dow %></td>
      </tr>
      <tr>
        <td><strong>Descriptor</strong></td>
        <td><%= @message.descriptor %></td>
      </tr>
      <tr>
        <td><strong>Title</strong></td>
        <td><%= @message.title %></td>
      </tr>
    </tbody>
  </table>

  <div class='show-actions'>
    <%= link_to 'Edit', edit_message_path(@message), class: 'btn btn-xs btn-primary' %>
    <%= link_to 'Delete', message_path(@message), method: :delete, data: { confirm: 'Are you sure you want to delete the message?'}, class: 'btn btn-xs btn-danger' %>
    <%= link_to 'View all Messages', messages_path, class: 'btn btn-xs btn-success' %>
    <%= link_to 'New Message', new_message_path, class: 'btn btn-xs btn-primary' %>
    &nbsp;
    <%= link_to 'New Translation', new_message_translation_path(@message), class: 'btn btn-xs btn-primary' %>
  </div>

  <div>
    <h3 align='center'>Translations</h3>
    <table class='table table-striped table-condensed'>
      <thead>
	<tr>
          <td><strong>id</strong></td>
          <td><strong>lan</strong></td>
          <td><strong>tran_title</strong></td>
          <td><strong>version</strong></td>
          <td><strong>blkc</strong></td>
          <td><strong>subc</strong></td>
          <td><strong>senc</strong></td>
          <td><strong>xcrip</strong></td>
          <td><strong>li</strong></td>
        </tr>
      </thead>
      <tbody>
<%# @translation.assignments.each do |a| %>
<% @message.translations.each do |t| %>
	<tr>
          <td><%= link_to t.id, message_translation_path(t.message, t) %></td>
          <td><%= t.lan %></td>
          <td><%= t.tran_title %></td> 
          <td><%= t.version %></td> 
          <td><%= t.blkc %></td>
          <td><%= t.subc %></td>
          <td><%= t.senc %></td>
          <td><%= t.xcrip %></td>
          <td><%= t.li %></td>
	  <td><%= link_to 'Edit', edit_message_translation_path(t.message, t) %></td>
	  <td><%= link_to 'Delete', t, method: :delete, data: { confirm: 'Are you sure you want to delete this Translation?' } %></td>
        </tr> 
<% end %>
      </tbody>
    </table>
  </div>  

</div>
