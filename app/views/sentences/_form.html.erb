<%= render 'shared/errors', obj: [@translation, @sentence] %>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for([@translation, @sentence], :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
            <%= f.label 'Block' %>
        </div>
        <div class='col-sm-8'>
            <%= f.number_field :blk, class: 'form-control', placeholder: 'Block number', autofocus: true %> 
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
            <%= f.label 'Sub-Block' %>
        </div>
        <div class='col-sm-8'>
            <%= f.number_field :sub, class: 'form-control', placeholder: 'Sub-Block number', autofocus: true %> 
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
            <%= f.label 'Running Sub-block' %>
        </div>
        <div class='col-sm-8'>
            <%= f.number_field :rsub, class: 'form-control', placeholder: 'Running sub-block number', autofocus: true %> 
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
            <%= f.label 'Sentence' %>
        </div>
        <div class='col-sm-8'>
            <%= f.number_field :sen, class: 'form-control', placeholder: 'Sentence number', autofocus: true %> 
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
            <%= f.label 'Running Sentence' %>
        </div>
        <div class='col-sm-8'>
            <%= f.number_field :rsen, class: 'form-control', placeholder: 'Running Sentence number', autofocus: true %> 
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
            <%= f.label 'Sentence type' %>
        </div>
        <div class='col-sm-8'>
            <%= f.select :typ, [['Normal', 'n'], ['Conversation', 'c'], ['Scripture', 's'], ['Poetry first line', 'p'], ['Poetry other lines', 'q']], class: 'form-control', placeholder: 'Type of sentence', autofocus: true %> 
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
            <%= f.label 'Tie' %>
        </div>
        <div class='col-sm-8'>
            <%= f.check_box :tie, class: 'form-control', placeholder: 'Sentence has tie', autofocus: true %> 
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>
            <%= f.label 'Translation' %>
        </div>
        <div class='col-sm-8'>
            <%= "#{@translation.id} #{@translation.lan} #{@translation.tran_title} #{@translation.descrip} #{@translation.blkc} #{@translation.subc} #{@translation.senc} #{@translation.xcrip}" %> 
        </div>
      </div>

      <div class="form-group">
        <div class='col-sm-offset-2 col-xs-10'>
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>      
    <% end %>

    <div class='col-xs-4 col-xs-offset-4'>
      [ <%= link_to "Cancel request and return to sentences listing", translation_sentences_path %> ]
    </div>    

  </div>
</div>
