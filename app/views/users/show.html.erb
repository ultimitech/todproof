<h2 align='center'>User</h2>

<div class='col-xs-8 col-xs-offset-2'>

  <table class='table table-striped'>
    <tbody>
      <tr>
        <td><strong>Id</strong></td>
        <td><%= @user.id %></td>
      </tr>
      <tr>
        <td><strong>Email</strong></td>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <td><strong>Username</strong></td>
        <td><%= @user.username %></td>
      </tr>
      <tr>
        <td><strong>Admin</strong></td>
        <td><%= @user.admin %></td>
      </tr>
      <tr>
        <td><strong>Current Assignment</strong></td>
	<td><%= link_to "#{@user.cur_assign.assignment_text}", assignment_path(@user.cur_assign) if(@user.cur_assign) %></td>
      </tr>
    </tbody>
  </table>

  <div class='show-actions'>
    <%#= link_to 'Edit', edit_user_registration_path, class: 'btn btn-xs btn-primary' %>
    <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-xs btn-primary' %>
    <%= link_to 'Delete', user_path(@user), method: :delete, data: { confirm: 'Are you sure you want to delete the user?'}, class: 'btn btn-xs btn-danger' %>
    <%= link_to 'View all Users', users_path, class: 'btn btn-xs btn-success' %>
    <%= link_to 'New User', new_user_registration_path, class: 'btn btn-xs btn-success' %>
    <%#= link_to 'New User', signup_path, class: 'btn btn-xs btn-success' %>
    &nbsp;
    <%= link_to 'New Assignment', new_assignment_path, class: 'btn btn-xs btn-success' %>
  </div>

  <div>
    <h3 align='center'>Assignments</h3>
    <table class='table table-striped table-condensed'>
      <thead>
	<tr>
          <td><strong>Id</strong></td>
          <td><strong>Role</strong></td>
          <td><strong>Active</strong></td>
          <td><strong>CI</strong></td>
          <td><strong>Place</strong></td>
          <td><strong>Translation</strong></td>
        </tr>
      </thead>
      <tbody>
<% @user.assignments.each do |a| %>
	<tr>
          <td><%= link_to a.id, assignment_path(a) %></td>
          <td><%= a.role %></td>
          <td><%= a.active %></td>
          <td><%= a.ci %></td>
          <td><%= a.place %></td>
	  <td><%= link_to a.translation.translation_text, message_translation_path(a.translation.message, a.translation) %></td>
	  <td><%= link_to 'Edit', edit_assignment_path(a) %></td>
	  <td><%= link_to 'Delete', a, method: :delete, data: { confirm: 'Are you sure you want to delete this Assignment?' } %></td>
        </tr> 
<% end %>
      </tbody>
    </table>
  </div>  

</div>
